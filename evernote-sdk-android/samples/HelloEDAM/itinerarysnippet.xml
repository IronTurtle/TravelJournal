<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="350dp"
    android:background="@android:color/white"
    >

  <TextView
      android:id="@+id/snippetDate"
      android:layout_width="90dp"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_alignParentTop="true"
      android:ellipsize="end"
      android:hint="0/00/0000"
      android:lines="1"
      android:scrollHorizontally="true" 
      />

  <TextView
      android:id="@+id/snippetLocation"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:gravity="center"
    android:lines="1"
    android:scrollHorizontally="true"
    android:ellipsize="end"
      android:hint="Cal Poly" />

  <TextView
      android:id="@+id/snippetText"
      android:layout_width="200dp"
      android:layout_height="80dp"
      android:layout_alignParentLeft="false"
      android:layout_marginLeft="7dp"
      android:layout_below="@+id/snippetEvent"
    android:lines="4"
    android:scrollHorizontally="true"
    android:ellipsize="end"
      android:hint="Bryan went to the park" 
       />

  <TextView
      android:id="@+id/snippetEvent"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="false"
      android:layout_marginLeft="7dp"
      android:layout_alignParentTop="true"
    android:lines="1"
    android:scrollHorizontally="true"
    android:ellipsize="end"
      android:hint="SWSLO13"
      />

  <ImageView
      android:id="@+id/snippetPic"
      android:layout_width="10dp"
      android:layout_height="80dp"
      android:layout_alignParentBottom="false"
      android:layout_below="@+id/snippetDate"
      android:layout_alignParentRight="true"
      android:layout_toRightOf="@+id/snippetText"
      android:gravity="center" />

</RelativeLayout> 
