<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/snippetPic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/snippetEvent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:lines="1"
        android:scrollHorizontally="true"
        android:textColor="@color/primaryOrange"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="sans" 
        android:layout_toRightOf="@id/snippetPic"/>

    <TextView
        android:id="@+id/snippetLocation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:lines="1"
        android:scrollHorizontally="true"
        android:textAlignment="gravity"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@id/snippetEvent"
        android:layout_toRightOf="@id/snippetPic" />

    <TextView
        android:id="@+id/snippetText"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:ellipsize="end"
        android:lines="2"
        android:scrollHorizontally="true"
        android:textColor="@android:color/black" 
        android:layout_below="@id/snippetLocation"
        android:layout_toRightOf="@id/snippetPic"/>

    <TextView
        android:id="@+id/snippetDate"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:scrollHorizontally="true"
        android:visibility="gone" />

</RelativeLayout>